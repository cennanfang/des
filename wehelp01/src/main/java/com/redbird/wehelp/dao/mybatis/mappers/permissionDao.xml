<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redbird.wehelp.dao.PermissionDao">
	
	<select id="findPermissionByRoleId" parameterType="int" resultMap="permissionResult" resultType="java.util.List">
        select * from t_permission where role_id=#{roleId}
    </select>
    
	<select id="find" parameterType="int" resultMap="permissionResult">
        select * from t_permission where id=#{id}
    </select>
    
    <!-- 使用resultMap映射实体类和字段之间的一一对应关系 -->
    <resultMap type="com.redbird.wehelp.pojo.Permission" id="permissionResult">
        <id property="id" column="id"/>
        <result property="token" column="token"/>
        <result property="url" column="url"/>
        <result property="available" column="available"/>
        <result property="roleId" column="role_id"/>
        <result property="description" column="description"/>
    </resultMap>
	
	<insert id="add" parameterType="com.redbird.wehelp.pojo.Permission" flushCache="true">  
   		INSERT INTO t_permission (token, url, role_id, available, description) VALUES (#{token}, #{url}, #{roleId}, #{available}, #{description})  
	</insert>  
	
	<update id="update" parameterType="com.redbird.wehelp.pojo.Permission">  
    	UPDATE t_permission SET token=#{token}, url=#{url}, role_id=#{roleId}, available=#{available}, description=#{description} WHERE id=#{id}  
	</update>  
	
	<delete id="delete" parameterType="int">  
    	DELETE FROM t_permission WHERE id=#{id}  
	</delete>  
</mapper>