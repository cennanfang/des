<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:id="@+id/main_linearlayout_footer"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:background="@drawable/widget_bar_bg_n">
	<RadioButton 
		android:id="@+id/frame_btn_home"
            style="@style/main_footbar_radio"
            android:text="@string/head_title_home"/>
	<ImageView
		style="@style/main_footbar_cutline"
		android:src="@drawable/widget_bar_cut_off"/>
	<RadioButton 
		 android:id="@+id/frame_btn_classification"
            style="@style/main_footbar_radio"
            android:text="@string/head_title_classification" />
	<ImageView
		style="@style/main_footbar_cutline"
		android:src="@drawable/widget_bar_cut_off"/>
	<RadioButton 
		 android:id="@+id/frame_btn_user_center"
            style="@style/main_footbar_radio"
            android:text="@string/head_title_user_center"/>
	
</LinearLayout>
